<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008ED6"
    android:id="@+id/splash_screen_3">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to report a ticket inspector"
        android:id="@+id/top_text_explain"
        android:textColor="@color/light_white"
        android:layout_marginTop="134dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click"
        android:textSize="25sp"
        android:textColor="@color/light_white"
        android:textStyle="bold"
        android:id="@+id/middle_text_action"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_action_icon_950"
        android:layout_below="@+id/top_text_explain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="then(voila!)"
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/sub_text"
        android:textColor="@color/light_white"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/new_report"
        android:layout_below="@+id/sub_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

</RelativeLayout>